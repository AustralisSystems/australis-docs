{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://australissystems.github.io/au-sys-docs/schemas/runbook-authoring.schema.json",
  "title": "AU-SYS Runbook Authoring Schema (doctrine -> protocols -> instructions/prompts)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "authoring_schema_version",
    "mcp_spec_revision",
    "artifact"
  ],
  "properties": {
    "authoring_schema_version": {
      "type": "string",
      "description": "Version of this AU-SYS authoring schema (not the upstream MCP spec). Use semantic versioning (e.g., '1.0.0').",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "mcp_spec_revision": {
      "type": "string",
      "description": "The upstream MCP spec revision this runbook format is intended to map to (informational but enforceable).",
      "const": "2025-11-25"
    },
    "artifact": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "meta",
        "content"
      ],
      "properties": {
        "meta": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "version",
            "schema",
            "id",
            "title",
            "description"
          ],
          "properties": {
            "version": {
              "type": "string",
              "description": "Semantic version of this runbook definition (e.g., '1.0.0')."
            },
            "schema": {
              "type": "string",
              "const": "mcp.runbook/v1",
              "description": "Fixed schema identifier for AU-SYS runbooks."
            },
            "id": {
              "type": "string",
              "pattern": "^[a-z0-9_.:-]+$",
              "description": "Canonical runbook identifier for governance and traceability. Lowercase; safe characters only."
            },
            "title": {
              "type": "string",
              "minLength": 3,
              "maxLength": 120,
              "description": "Human-friendly display title for UIs and registries."
            },
            "description": {
              "type": "string",
              "minLength": 10,
              "maxLength": 2000,
              "description": "Concise description of what this runbook orchestrates and when to use it."
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "Optional discoverability tags (e.g., 'implementation', 'debug', 'fastapi')."
            }
          }
        },
        "content": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "governed_by",
            "workflow"
          ],
          "properties": {
            "governed_by": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "doctrine_refs"
              ],
              "description": "Declares the governing doctrine/protocol set for this runbook. Runbooks must not invent policy; they must operate under declared governance.",
              "properties": {
                "doctrine_refs": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "description": "Doctrine IDs that govern this runbook."
                },
                "protocol_refs": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": [],
                  "description": "Protocol IDs that constrain execution and outputs."
                },
                "directive_refs": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": [],
                  "description": "Optional directive IDs that this runbook explicitly activates or highlights."
                }
              }
            },
            "variables": {
              "type": "object",
              "description": "Runbook-level variables that steps may reference (e.g., SPEC path).",
              "default": {},
              "additionalProperties": {
                "type": [
                  "string",
                  "number",
                  "boolean",
                  "object",
                  "array",
                  "null"
                ]
              }
            },
            "workflow": {
              "type": "array",
              "minItems": 1,
              "description": "Ordered orchestration steps. This captures the v2 combined doctrine->protocol->instruction runner pattern in a structured form.",
              "items": {
                "$ref": "#/$defs/runbookStep"
              }
            },
            "halt": {
              "type": "boolean",
              "default": false,
              "description": "If true, the runbook must halt after executing its workflow and await explicit operator authorisation before follow-on execution."
            }
          }
        },
        "governance": {
          "$ref": "#/$defs/governance"
        },
        "traceability": {
          "$ref": "#/$defs/traceability"
        }
      }
    }
  },
  "$defs": {
    "governance": {
      "type": "object",
      "additionalProperties": false,
      "description": "Ownership and lifecycle metadata.",
      "properties": {
        "owners": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "review",
            "approved",
            "deprecated"
          ],
          "default": "draft"
        },
        "changeLog": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "traceability": {
      "type": "object",
      "additionalProperties": false,
      "description": "Optional traceability fields for migration, auditing, and integrity verification.",
      "properties": {
        "raw": {
          "type": "string",
          "description": "Embedded original content for traceability. Prefer raw_ref for large or sensitive items."
        },
        "raw_ref": {
          "type": "string",
          "format": "uri",
          "description": "Reference (URI or repo path) to original/raw content stored externally."
        },
        "raw_hash": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$",
          "description": "SHA-256 hex digest of the original content for integrity verification."
        }
      }
    },
    "runbookStep": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Optional stable step identifier."
        },
        "type": {
          "type": "string",
          "enum": [
            "spec_refs",
            "directives",
            "remember",
            "acknowledge",
            "execute_instruction",
            "execute_prompt",
            "halt"
          ]
        },
        "spec_refs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Spec documents for this runbook step (repo paths or URIs)."
        },
        "directives": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Operational directives for this step (freeform text)."
        },
        "items": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Generic list items, used by steps like remember."
        },
        "acknowledge": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "doctrine": {
              "type": "string",
              "description": "Doctrine reference to read and acknowledge (legacy-friendly)."
            },
            "protocols": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "Protocols to read and acknowledge (legacy-friendly)."
            },
            "instructions": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "Instructions to read and acknowledge (legacy-friendly)."
            },
            "prompts": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "Prompts to read and acknowledge (legacy-friendly)."
            }
          }
        },
        "instruction_ref": {
          "type": "string",
          "description": "Instruction id/path for execute_instruction."
        },
        "prompt_ref": {
          "type": "string",
          "description": "Prompt id/name/path for execute_prompt."
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Inputs to provide to the executed instruction/prompt (legacy-friendly)."
        },
        "arguments": {
          "type": "object",
          "description": "Arguments for execute_prompt (maps to MCP prompts/get arguments).",
          "additionalProperties": {
            "type": [
              "string",
              "number",
              "boolean",
              "object",
              "array",
              "null"
            ]
          }
        },
        "reason": {
          "type": "string",
          "description": "Reason for halt."
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "spec_refs"
              }
            }
          },
          "then": {
            "required": [
              "spec_refs"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "directives"
              }
            }
          },
          "then": {
            "required": [
              "directives"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "remember"
              }
            }
          },
          "then": {
            "required": [
              "items"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "acknowledge"
              }
            }
          },
          "then": {
            "required": [
              "acknowledge"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "execute_instruction"
              }
            }
          },
          "then": {
            "required": [
              "instruction_ref"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "execute_prompt"
              }
            }
          },
          "then": {
            "required": [
              "prompt_ref"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "halt"
              }
            }
          },
          "then": {
            "required": [
              "reason"
            ]
          }
        }
      ]
    }
  }
}
